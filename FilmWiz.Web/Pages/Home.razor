@page "/"

<MudContainer Class="mt-16">
    <MudText Typo="Typo.h3" Align="Align.Center" GutterBottom="true">Welcome to FilmWiz</MudText>
    <MudPaper Class="pa-4" Elevation="3">
        <MudText Align="Align.Center">
            Start searching for your favourite films using our search feature.
        </MudText>
        <MudButton Href="search"
                   Variant="Variant.Filled"
                   Color="Color.Primary"
                   Size="Size.Large"
                   Class="mt-4 d-block mx-auto">
            Start Searching
        </MudButton>
    </MudPaper>
</MudContainer>